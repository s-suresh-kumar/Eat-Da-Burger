<h1>Eat-Da-Burger</h1>
<div class="row">
  <div class="col-md-5">
    <h2>Burgers</h2>

    <ul class="pl-5">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-5">
    <h2>Devoured</h2>

    <ul class="pl-5">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md">
    <h2 class="text-center">Add a Burger</h2>
  </div>
</div>
<div class="col-md">
  <form class="create-form  justify-content-center mb-4">
    <div class="form-group justify-content-center">
      <label for="burg">Burger:</label>
      <input type="text" id="burg" name="name">
    </div>
    <button type="submit">New Burger</button>
  </form>
</div>